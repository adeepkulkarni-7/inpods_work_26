# ===========================================
# Curriculum Mapping Service Configuration
# ===========================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# -------------------------------------------
# REQUIRED: Azure OpenAI Configuration
# -------------------------------------------
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT=gpt-4

# -------------------------------------------
# Service Configuration
# -------------------------------------------
SERVICE_NAME=Curriculum Mapping Service
HOST=0.0.0.0
PORT=5001
DEBUG=false

# -------------------------------------------
# File Storage
# -------------------------------------------
UPLOAD_FOLDER=uploads
OUTPUT_FOLDER=outputs
INSIGHTS_FOLDER=outputs/insights
LIBRARY_FOLDER=outputs/library
MAX_FILE_SIZE_MB=16

# -------------------------------------------
# Rate Limiting
# -------------------------------------------
RATE_LIMIT_ENABLED=true
MAX_QUESTIONS_PER_REQUEST=100
BATCH_SIZE_DEFAULT=5
REQUESTS_PER_MINUTE=60

# -------------------------------------------
# CORS (Cross-Origin Resource Sharing)
# -------------------------------------------
# Comma-separated list of allowed origins
# Use * for all origins (not recommended for production)
CORS_ORIGINS=*

# -------------------------------------------
# Authentication (Optional)
# -------------------------------------------
AUTH_ENABLED=false
AUTH_PROVIDER=jwt
# Required for JWT auth - use a secure random string
AUTH_SECRET_KEY=your-super-secret-key-change-this-in-production
AUTH_TOKEN_EXPIRY_HOURS=24
AUTH_API_KEY_HEADER=X-API-Key

# OAuth2 settings (if using OAuth2 provider)
# AUTH_OAUTH2_CLIENT_ID=
# AUTH_OAUTH2_CLIENT_SECRET=
# AUTH_OAUTH2_AUTHORIZE_URL=
# AUTH_OAUTH2_TOKEN_URL=

# -------------------------------------------
# Database (Optional)
# -------------------------------------------
# Enable for persistent storage instead of file-based
DATABASE_ENABLED=false
# PostgreSQL example:
# DATABASE_URL=postgresql://user:password@localhost:5432/curriculum_mapping
# SQLite example:
# DATABASE_URL=sqlite:///./curriculum_mapping.db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# -------------------------------------------
# Logging
# -------------------------------------------
LOG_LEVEL=INFO
# LOG_FILE=curriculum_mapping.log

# -------------------------------------------
# Docker-specific (when using docker-compose)
# -------------------------------------------
# DB_PASSWORD=changeme
